# ==============================================
# Discord LLM Bot - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ==================
# Required API Keys
# ==================

# Discord User Token (Required)
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_token_here

# Google Gemini API Key (Required)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ==================
# Optional API Keys
# ==================

# OpenAI API Key (Optional - fallback LLM)
OPENAI_API_KEY=

# OpenRouter API Key (Optional - fallback LLM)
OPENROUTER_API_KEY=

# Perplexity API for market context enrichment (Optional)
PERPLEXITY_API_KEY=

# ==================
# Environment Settings
# ==================

# Environment: development | production
ENVIRONMENT=production

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# ==================
# Performance Settings
# ==================

# Number of worker threads (adjust based on CPU cores)
WORKER_COUNT=4

# Memory limit in MB (adjust based on available RAM)
MEMORY_LIMIT_MB=1024

# Maximum queue size for message processing
MAX_QUEUE_SIZE=10000

# ==================
# LLM Configuration
# ==================

# Daily cost limit in USD
LLM_DAILY_COST_LIMIT=10.0

# Default LLM provider: gemini | openai | openrouter
DEFAULT_LLM_PROVIDER=gemini

# ==================
# Database Settings
# ==================

# Database path (relative to project root)
DATABASE_PATH=data/db.sqlite

# Backup interval in hours
DATABASE_BACKUP_INTERVAL_HOURS=6

# Maximum number of backups to keep
DATABASE_MAX_BACKUPS=48

# ==================
# Monitoring Settings
# ==================

# Health check HTTP port
HEALTH_CHECK_PORT=8080

# Health check interval in seconds
HEALTH_CHECK_INTERVAL_SECONDS=30

# ==================
# Real Test Configuration
# ==================

# Enable real API tests (1=enabled, 0=disabled)
ENABLE_REAL_TESTS=0

# Discord server ID for testing
TEST_SERVER_ID=

# Hours to look back for test data
TEST_HOURS_BACK=1

# ==================
# Alert Configuration (Optional)
# ==================

# Email Alerts
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Slack Alerts
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=

# Generic Webhook Alerts
WEBHOOK_ENABLED=false
WEBHOOK_URL=